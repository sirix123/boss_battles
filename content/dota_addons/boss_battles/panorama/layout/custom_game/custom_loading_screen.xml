<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<!-- Panel script -->
		<include src="file://{resources}/scripts/custom_game/custom_loading_screen.js" />
	</scripts>

	<!-- snippets --> 
	<snippets>
	    <snippet name="leaderboard_header_info">
            <Panel class="leaderboard_header_info" hittest="false" >

				<!-- RANK -->
				<Panel id="header_bossFight_rank_container" class="header_container_small">
                  	<Label text="'#'" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- PLAYERS -->
				<Panel id="header_bossFight_players_container" class="header_container_large">
                  	<Label text="Players" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- CLASSES -->
				<Panel id="header_bossFight_classes_container" class="header_container_large">
                  	<Label text="Heroes" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- LIVES -->
				<Panel id="header_bossFight_lives_container" class="header_container_small">
                  	<Label text="L" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS1 -->
				<Panel id="header_bossFight_boss1_container" class="header_container">
                  	<Label text="B1" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS2 -->
				<Panel id="header_bossFight_boss2_container" class="header_container">
                  	<Label text="B2" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS3 -->
				<Panel id="header_bossFight_boss3_container" class="header_container">
                  	<Label text="B3" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS4 -->
				<Panel id="header_bossFight_boss4_container" class="header_container">
                  	<Label text="B4" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS5 -->
				<Panel id="header_bossFight_boss5_container" class="header_container">
                  	<Label text="B5" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS6 -->
				<Panel id="header_bossFight_boss6_container" class="header_container">
                  	<Label text="B6" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- TOTAL -->
				<Panel id="header_bossFight_total_container" class="header_container">
                  	<Label text="Total" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

            </Panel>  
        </snippet> 

		<snippet name="leaderboard_row_info">
            <Panel hittest="false" class="leaderboard_row_info" >

				<!-- RANK -->
				<Panel id="leaderboard_row_info_cell_rank" class="leaderboard_row_info_cell_small">
                	<Label text="1" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_rank"/>
				</Panel>

				<!-- Players -->
				<Panel id="leaderboard_row_info_cell_players" class="leaderboard_row_info_cell_stack">
                	<Label text="Marc" 		class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_player_1"/>
					<Label text="Nic" 		class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_player_2"/>
					<Label text="Mike" 		class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_player_3"/>
					<Label text="Brotato" 	class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_player_4"/>
				</Panel>

				<!-- Heroes -->
				<Panel id="leaderboard_row_info_cell_heroes" class="leaderboard_row_info_cell_stack">
                	<Label text="Ice mage" 		class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_hero_1"/>
					<Label text="Cenzuo" 		class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_hero_2"/>
					<Label text="Blademaster" 	class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_hero_3"/>
					<Label text="Fire mage" 	class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_hero_4"/>
				</Panel>

				<!-- Lives -->
				<Panel id="leaderboard_row_info_cell_lives" class="leaderboard_row_info_cell_small">
                	<Label text="1" class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_live_1"/>
					<Label text="3" class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_live_2"/>
					<Label text="1" class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_live_3"/>
					<Label text="2" class="leaderboard_row_info_cell_stack_child" id="leaderboard_row_info_live_4"/>
				</Panel>

				<!-- B1 time -->
				<Panel id="leaderboard_row_info_cell_boss_1" class="leaderboard_row_info_cell">
                	<Label text="0:10:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_1_time"/>
				</Panel>

				<!-- B2 time -->
				<Panel id="leaderboard_row_info_cell_boss_2" class="leaderboard_row_info_cell">
                	<Label text="0:70:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_2_time"/>
				</Panel>

				<!-- B3 time -->
				<Panel id="leaderboard_row_info_cell_boss_3" class="leaderboard_row_info_cell">
                	<Label text="0:40:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_3_time"/>
				</Panel>

				<!-- B4 time -->
				<Panel id="leaderboard_row_info_cell_boss_4" class="leaderboard_row_info_cell">
                	<Label text="0:00:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_4_time"/>
				</Panel>

				<!-- B5 time -->
				<Panel id="leaderboard_row_info_cell_boss_5" class="leaderboard_row_info_cell">
                	<Label text="0:30:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_5_time"/>
				</Panel>

				<!-- B6 time -->
				<Panel id="leaderboard_row_info_cell_boss_6" class="leaderboard_row_info_cell">
                	<Label text="1:30:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_6_time"/>
				</Panel>

				<!-- Total time -->
				<Panel id="leaderboard_row_info_cell_boss_total" class="leaderboard_row_info_cell">
                	<Label text="0:30:24" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_total_time"/>
				</Panel>
            </Panel>
        </snippet>

	</snippets>

	<Panel hittest="false" style="width: 100%; height: 100%;">
		<Panel class="AddonLoadingRoot">

			<!-- Pick list (showing options) | Row 1 |  style="border: 1px solid red;"
			==================================================================--> 
			<Panel id="BackGround" >
				<Image src="file://{images}/loading_screen/Tinker.jpg" scaling="stretch-to-fit-preserve-aspect" />
			</Panel>

			<!-- Leaderboard Container |  style="border: 1px solid red;" 
			=========================================-->
			<Panel id="LeaderboardContainer" >
				<!-- Leaderboard snippets 
				==================================================================-->

				<Panel class="leaderboard_titles" id="leaderboard_titles" hittest="false">
					<!-- snippet: leaderboard_titles goes here -->
				</Panel>

				<Panel class="leaderboard_rows" id="leaderboard_rows" hittest="false">
					<!-- snippet: leaderboard_rows goes here -->
				</Panel>

			</Panel>

			<!-- Socials |  style="border: 1px solid red;" 
			=========================================-->
			<Panel id="SocialsContainer">

			</Panel>
		</Panel>
	</Panel>
</root>