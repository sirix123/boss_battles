				<Panel id="leaderboard_row_info_cell_boss_6" class="leaderboard_row_info_cell">
                	<Label text="" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_6_time"/>
				</Panel>

				<!-- Total time 
				<Panel id="leaderboard_row_info_cell_boss_total" class="leaderboard_row_info_cell">
