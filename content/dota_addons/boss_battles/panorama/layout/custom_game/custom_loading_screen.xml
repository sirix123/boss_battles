				</Panel>

				<!-- BOSS4 -->
				<Panel id="header_bossFight_boss4_container" class="header_container">
                  	<Label text="B4" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS5 -->
				<Panel id="header_bossFight_boss5_container" class="header_container">
                  	<Label text="B5" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS6 -->
				<Panel id="header_bossFight_boss6_container" class="header_container">
                  	<Label text="B6" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- TOTAL 
				<Panel id="header_bossFight_total_container" class="header_container">
                  	<Label text="Total" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>
				-->

            </Panel>  
        </snippet> 

