				</Panel>

				<!-- CLASSES -->
				<Panel id="header_bossFight_classes_container" class="header_container_large">
                  	<Label text="Heroes" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- DEATHS -->
				<Panel id="header_bossFight_lives_container" class="header_container_small">
                  	<Label text="D" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS1 -->
				<Panel id="header_bossFight_boss1_container" class="header_container">
                  	<Label text="B1" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

				<!-- BOSS2 -->
				<Panel id="header_bossFight_boss2_container" class="header_container">
                  	<Label text="B2" class="header_bossFight_heading_text" id="header_bossFight_heading_text"/>
				</Panel>

