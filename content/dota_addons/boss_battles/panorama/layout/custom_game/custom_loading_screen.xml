				</Panel>

				<!-- B4 time -->
				<Panel id="leaderboard_row_info_cell_boss_4" class="leaderboard_row_info_cell">
                	<Label text="" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_4_time"/>
				</Panel>

				<!-- B5 time -->
				<Panel id="leaderboard_row_info_cell_boss_5" class="leaderboard_row_info_cell">
                	<Label text="" class="leaderboard_row_info_cell_text" id="leaderboard_row_info_boss_5_time"/>
				</Panel>

