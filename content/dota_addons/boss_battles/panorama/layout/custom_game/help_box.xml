<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/help_box.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/help_box.js" />
	</scripts>

    <!-- snippets --> 
	<snippets>

		<!-- help button --> 
        <snippet name="HelpButtonContainer">
            <Panel class="HelpButtonContainer" >
                <Button id="HelpButtonBtn" class="HelpButtonBtn" onactivate="OnHelpButtonPressed()">
                    <Label id="HelpButtonLabel" class="HelpButtonLabel" text="Info" />
                </Button>
            </Panel>
        </snippet>

        <!-- menu/list of things --> 
        <snippet name="HelpButtonToolTip">
            <Panel class="HelpButtonToolTip" >
                <Panel id="HelpButtonToolTipHeading" class="HelpButtonToolTipHeading">
                    <Panel id="HelpButtonToolTipTextContainer" class="HelpButtonToolTipTextContainer">
                        <Label id="HelpButtonToolTipTextContainerText" class="HelpButtonToolTipTextContainerText" text="Info" />
                    </Panel>
                    <Button id="HelpButtonToolTipCloseButton" class="HelpButtonToolTipCloseButton" onactivate="OnToolTipCloseButtonPressed()">
                        <Label id="HelpButtonToolTipCloseButtonLabel" class="HelpButtonToolTipCloseButtonLabel" text="X" />
                    </Button>
                </Panel>
                <Panel id="HelpButtonToolTipMenu" class="HelpButtonToolTipMenu">
                    <Panel id="HelpButtonToolTipMenuItem_1" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_1" class="HelpButtonToolTipMenuText" text="Type !reset if your hero is automatically moving in a direction." />
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_6" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_6" class="HelpButtonToolTipMenuText" text="There are 2 different casting systems: Default and Spell interrupt. By default Spell interrupt is disabled you can change to Spell interrupt by typing !spell interrupt on to turn Spell interrupt off again type !spell interrupt off. Note by default in both systems all spells interupt m1 if you're holding down m1." />
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_2" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_2" class="HelpButtonToolTipMenuText" text="If you're in Normal mode type !start boss Beastmaster to change bosses the next time you stand on the ready up area (Gyrocopter, Timbersaw, Beastmaster, Techies, Clockwerk, Tinker)."/>
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_3" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_3" class="HelpButtonToolTipMenuText" text="If you complete all of the bosses your game session will be uploaded to the Leaderboard."/>
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_4" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_4" class="HelpButtonToolTipMenuText" text="At the end of the season the top 3 teams of Hardmode will be added to the Hall of Fame."/>
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_5" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_5" class="HelpButtonToolTipMenuText" text="Type !gameid to get the game id this will print the game_id to console. If you encounter a bug and want to report it this id helps alot."/>
                    </Panel>
                    <Panel id="HelpButtonToolTipMenuItem_6" class="HelpButtonToolTipMenuItem">
                        <Label id="HelpButtonToolTipMenuText_6" class="HelpButtonToolTipMenuText" text="There is a bar above your spells, this bar shows modifiers your hero currently has if you mouse over the icon of the modifier it tells you what it does."/>
                    </Panel>
                </Panel>
            </Panel>
        </snippet>

	</snippets>

    <Panel hittest="false" class="parent">
        <Panel id="HelpPanel" hittest="true" >
            <Panel id="HelpButton" >
            </Panel>
            <Panel id="HelpToolTip" >
            </Panel>
        </Panel>
    </Panel>

</root>