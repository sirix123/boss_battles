							<Label id="PickHeroBtnTxt" text="" />
						</Button> 
					</Panel>

					<Panel id="npc_dota_hero_medusa" class="HeroOption" >
						<DOTAHeroImage heroname="npc_dota_hero_medusa" heroimagestyle="portrait" scaling="none" onactivate="SelectHero('npc_dota_hero_medusa')"/>
						<Button id="PickHeroBtn" class="disabled" onactivate="PickHero('npc_dota_hero_medusa')" >
							<Label id="PickHeroBtnTxt" text="" />
						</Button>
					</Panel>

					<Panel id="npc_dota_hero_phantom_assassin" class="HeroOption" >
						<DOTAHeroImage heroname="npc_dota_hero_phantom_assassin" heroimagestyle="portrait" scaling="none" onactivate="SelectHero('npc_dota_hero_phantom_assassin')"/>
						<Button id="PickHeroBtn" class="disabled" onactivate="PickHero('npc_dota_hero_phantom_assassin')" >
							<Label id="PickHeroBtnTxt" text="" />
						</Button>
					</Panel>

					<Panel id="npc_dota_hero_kunkka" class="HeroOption" >
