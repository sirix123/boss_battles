<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/custom_game/picking_screen.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<!-- Panel script -->
		<include src="file://{resources}/scripts/custom_game/hero_selection.js" />
