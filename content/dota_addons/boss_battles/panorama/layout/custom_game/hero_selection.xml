						<Button id="PickHeroBtn" class="disabled" onactivate="PickHero('npc_dota_hero_kunkka')" >
							<Label id="PickHeroBtnTxt" text="" />
						</Button>
					</Panel>

					<Panel id="npc_dota_hero_grimstroke" class="HeroOption" >
						<DOTAHeroImage heroname="npc_dota_hero_grimstroke" heroimagestyle="portrait" scaling="none" onactivate="SelectHero('npc_dota_hero_grimstroke')"/>
						<Button id="PickHeroBtn" class="disabled" onactivate="PickHero('npc_dota_hero_grimstroke')" >
							<Label id="PickHeroBtnTxt" text="" />
						</Button>
					</Panel>

				</Panel>
			</Panel>

			<!-- Pedestal row
			==================================================================-->
