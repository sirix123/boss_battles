<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/post_game_screen.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/post_game_screen.js" />
	</scripts>

    <!-- snippets --> 
	<snippets>
	</snippets>

    <Panel hittest="false" class="parent">
        <Panel id="PostPanelContainer" hittest="true" >
            <Panel id="PostPanelContainerHeading" class="PostPanelContainerHeading">
                <Panel id="PostPanelContainerHeadingTextContainer" class="PostPanelContainerHeadingTextContainer">
                    <Label id="PostPanelContainerHeadingTextContainerText" class="PostPanelContainerHeadingTextContainerText" text="Game Complete!" />
                </Panel>
                <Button id="PostPanelCloseButton" class="PostPanelCloseButton" onactivate="PostPanelCloseButtonPressed()">
                    <Label id="PostPanelCloseButtonLabel" class="PostPanelCloseButtonLabel" text="X" />
                </Button>
            </Panel>
            <Panel id="PostPanelContainerBody" class="PostPanelContainerBody">
                <Label id="PostPanelContainerBodyText" class="PostPanelContainerBodyText" text="Thanks for playing Boss Battles! You've defeated all bosses, your game has been uploaded to the leaderboard. View the leaderboard on the website at bossbattles.co" />
            </Panel>
        </Panel>
    </Panel>

</root>