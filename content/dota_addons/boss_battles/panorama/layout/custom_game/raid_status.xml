<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/raid_status.js" />
    </scripts>
    <styles>
        <include src="file://{resources}/styles/custom_game/raid_status.css" />
    </styles>


    <snippets>
        



        <snippet name="BossFrame">
            <Panel class="BossFrame" hittest="false">

                <Panel hittest="false" class="BossFrameHpPanelContainer" id="BossFrameHpPanelContainer"> 
                    <Panel hittest="false" class="BossFrameHpPanelLeft" id="BossFrameHpPanelLeft">
                        <Label text="100%" class="BossFrameText" id="BossFrameHpLabel" />
                    </Panel>
                    <Panel hittest="false" class="BossFrameHpPanelRight" id="BossFrameHpPanelRight"> </Panel>
                </Panel>

                <Panel hittest="false" class="BossFrameMpPanelContainer" id="BossFrameMpPanelContainer"> 
                    <Panel hittest="false" class="BossFrameMpPanelLeft" id="BossFrameMpPanelLeft">
                        <Label text="100%" class="BossFrameText" id="BossFrameMpLabel" />
                    </Panel>
                    <Panel hittest="false" class="BossFrameMpPanelRight" id="BossFrameMpPanelRight"> </Panel>
                </Panel>
                <Panel hittest="false" class="BossFrameCastbarPanel" id="BossFrameCastbarPanel">
                    <Label text="Fireball" class="BossFrameText" id="BossFrameCastbarLabel" />
                </Panel>
            </Panel>

        </snippet>

    </snippets>

    <Panel hittest="false" class="parent">
        <Panel class="PlayersUiContainer" id="PlayersUiContainer" hittest="false">
            <!-- JS will insert snippet PlayerUiFrame here -->
        </Panel>
        <Panel class="BossFrameContainer" id="BossFrameContainer" hittest="false"> 
            <!-- JS will insert snippet BossFrame here -->
        </Panel>
    </Panel>
</root>