<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/shop.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/shop.js" />
	</scripts>

	<snippets>

        <snippet name="ProductList">
            <Panel class="ProductList" >
                <Panel id="ProductDisplay" class="ProductDisplay" style="border: 1px solid blue;" >
					<Panel id="ProductDisplayPictureContainer" class="ProductDisplayPictureContainer" style="border: 1px solid blue;">
                        <!--<DOTAHeroImage id="HeroImage" heroname="hero_name" heroimagestyle="portrait" scaling="none"/>-->
                    </Panel>
					<Button id="ProductPurchaseButton" class="ProductPurchaseButton" style="border: 1px solid blue;" >
						<Label id="ProductPurchaseButtonTxt" class="ProductPurchaseButtonTxt" text="Buy Now!" />
					</Button>
				</Panel>
            </Panel>
        </snippet>

	</snippets>

    <Panel hittest="false" class="parent">

        <Panel id="ShopButtonPanel" hittest="true" >
            <Button id="ShopButton" class="ShopButton" onactivate="OnShopButtonPressed()">
                <Label id="ShopButtonLabel" class="ShopButtonLabel" text="Shop" />
            </Button>
        </Panel>

        <Panel id="ParentShopPanel" hittest="true" >

            <Panel id="ProductListHeader" class="ProductListHeader" style="border: 1px solid blue;" >
                <Panel id="ProductListTitle" class="ProductListTitle" style="border: 1px solid blue;" >
                    <Label id="ProductListTitleTxt" class="ProductListTitleTxt" text="Shop" />
                </Panel>
                <Panel id="ProductListCloseButtonContainer" class="ProductListCloseButtonContainer" style="border: 1px solid blue;" >
                    <Button id="ProductListCloseButton" class="ProductListCloseButton" onactivate="OnShopCloseButtonPressed()" style="border: 1px solid blue;" >
                        <Label id="ProductListCloseButtonTxt" class="ProductListCloseButtonTxt" text="X" />
                    </Button>
                </Panel>
            </Panel>
            
            <Panel id="ProductListContainer" class="ProductListContainer" style="border: 1px solid red;" >
                <!-- SNIPPET HERE-->
            </Panel>
            

            <Panel id="ProductListFooter" class="ProductListFooter" style="border: 1px solid blue;" >
                <Panel id="ProductListFooterTitle" class="ProductListFooterTitle" style="border: 1px solid blue;" >
                    <Label id="ProductListTitleFooterTxt" class="ProductListTitleTxt" text="Purchases can take up to 2minutes to process." />
                </Panel>
            </Panel>

        </Panel>
    </Panel>
</root>